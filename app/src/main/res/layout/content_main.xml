<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.alcalaesmusica.app.ui.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dp">

    <TextView style="@style/TextBase"
        android:text="@string/next_events"
        android:textSize="20sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/img_logo_plan_ferias"/>

    <View style="@style/XpansorVert" />

    <TextView style="@style/TextBase"
        android:text="@string/app_under_construction"
        android:textSize="18sp"
        android:gravity="center"/>

</LinearLayout>
